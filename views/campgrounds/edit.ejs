<% layout('layout/boilerplate') %>
<h1>Edit</h1>
<form action="/campgrounds/<%=campgrounds.id%>?_method=PATCH" method="post">
  <div>
    <label for="title">Campground Name:</label>
    <input
      type="text"
      name="campground[title]"
      id="title"
      value="<%=campgrounds.title%>"
    />
  </div>
  <div>
    <label for="location">Campground location:</label>
    <input
      type="text"
      name="campground[location]"
      id="location"
      value="<%=campgrounds.location%>"
    />
  </div>
  <button>Update Campground</button>
</form>
